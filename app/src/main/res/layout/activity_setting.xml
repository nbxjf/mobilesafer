<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="设置中心"
        style="@style/TitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.declan.mobilesafer.view.SettingItemview
        xmlns:mobilesafer="http://schemas.android.com/apk/res/com.declan.mobilesafer"
        android:id="@+id/siv_update"
        mobilesafer:destitle="自动更新设置"
        mobilesafer:desoff = "自动更新已关闭"
        mobilesafer:deson = "自动更新已开启"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.declan.mobilesafer.view.SettingItemview>
    <com.declan.mobilesafer.view.SettingItemview
        xmlns:mobilesafer="http://schemas.android.com/apk/res/com.declan.mobilesafer"
        android:id="@+id/siv_address"
        mobilesafer:destitle="电话归属地显示设置"
        mobilesafer:desoff = "归属地显示已关闭"
        mobilesafer:deson = "归属地显示已开启"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.declan.mobilesafer.view.SettingItemview>
    <com.declan.mobilesafer.view.SettingClickview
        android:id="@+id/scv_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.declan.mobilesafer.view.SettingClickview>
    <com.declan.mobilesafer.view.SettingClickview
        android:id="@+id/scv_toast_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.declan.mobilesafer.view.SettingClickview>


</LinearLayout>